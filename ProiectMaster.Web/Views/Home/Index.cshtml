@model IEnumerable<ProductVM>

@{ ViewData["Title"] = "Pagina de start";
                var detailsRoute = "/Details/{0}"; }
</br>
<center><h3 style="border-bottom: 1px solid black">ULTIMELE PRODUSE ADAUGATE</h3></center> </br>

<div class="row">

    @foreach (var product in Model)
    {
<div class="col-4">
    <div class="card mb-4">

        <div class="card-header">
            <h4 class="my-0 font-weight-normal">
                <label style="font-size:23px; color:steelblue;">@product.Name</label>
            </h4>
        </div>

        <img class="card-img-top" style="height:100%" src="~/@product.ImagePath" alt="no image" />

        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <label style="font-size:20px; color:#a51313"><b>@product.Price RON</b></label>
                </div>
                <a href="@string.Format(detailsRoute, product.Id)" class="btn pull-right btn-outline-info">View Details</a>
            </div>
        </div>

    </div>
</div>}

</div>